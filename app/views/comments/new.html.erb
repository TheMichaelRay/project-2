<%= form_for [@comment, @post], html: {class: 'new_user form-horizontal'} do |f| %>
    <div class="row"><legend class="col-md-4 col-md-offset-4">New Comment</legend></div>
    <fieldset>
        <div class="form-group">
            <%= f.label :body, 'Comment', class: 'col-md-4 control-label' %>
            <div class="col-md-5">
                <%= f.text_area :body, class: 'form-control', rows: "3"%>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-8 col-md-offset-4">
                <%= f.submit 'Post Comment!', class: 'btn btn-success' %>
            </div>
        </div>
    </fieldset>
<% end %>
